{
	"variables": {
		"version": "dev",
		"script": "provision.sh"
	},
	"builders": [
		{
			"type": "virtualbox-ovf",
			"source_path": ".tmp/box.ovf",
			"guest_additions_mode": "disable",
			"headless": true,
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
			"shutdown_command": "sudo shutdown -h now"
		},
		{
			"type": "amazon-ebs",
			"region": "us-east-1",
			"source_ami": "ami-2b594f41",
			"instance_type": "m3.medium",
			"ssh_username": "ubuntu",
			"ami_name": "dockercloud-node_{{timestamp}}",
			"ami_groups": ["all"],
			"tags": {
				"Name": "dockercloud-node_{{user `version`}}",
				"Version": "{{user `version`}}"
			},
			"ami_regions": ["us-west-1", "us-west-2", "eu-west-1", "sa-east-1", "ap-northeast-1", "ap-southeast-1", "ap-southeast-2", "eu-central-1"]
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "{{user `script`}}"
		}
	],
	"post-processors": [{
        "type": "vagrant",
        "output": "build/dockercloud-node_{{user `version`}}_{{.Provider}}.box",
        "vagrantfile_template": "Vagrantfile.template",
        "only": ["virtualbox-ovf"]
    }]
}